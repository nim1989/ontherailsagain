- search_bar_html = render 'shared/search'
- tags            = render 'shared/tags'
%header
  .container.row-fluid#header_title
    %a.home{:href => "/"}
      On The
      %span#bold_title Rails
      Again
  %nav
    .container.row-fluid
      .col-md-6
        %ul.nav#menu_links
          %li{ :class => (current_page?(articles_path) || current_page?(root_path) ? 'active' : '') }
            = link_to 'Articles', root_path
          %li{ :class => (current_page?(authors_path) ? 'active' : '') }
            = link_to 'Ã€ propos', authors_path
      %ul.nav.span2.not_mobile#outgoing_links
        %li
          = link_to feed_path, :id => 'rss_feed', :target => '_blank', :title => 'RSS' do
            %i.icon-rss
        %li
          %a.share#twitter{:href => 'https://twitter.com/OnTheRailsBlog'          , :target => '_blank', :title => 'Twitter'}
            %i.icon-twitter
      %div.span4#search_form.not_mobile
        %div= search_bar_html
      %div#header_mobile.mobile
        %div
          = link_to feed_path, :id => 'rss_feed', :target => '_blank', :title => 'RSS' do
            %i.icon-rss
        %div
          %a.share#twitter{:href => 'https://twitter.com/OnTheRailsBlog'          , :target => '_blank' , :title => 'Twitter'}
            %i.icon-twitter
        .header_link_group
          %a
            %i.icon-tag#tag_button{ :data => { :content => tags, 'original-title' => 'Tags' }}
        .header_link_group
          %a
            %i.icon-search#search_button{ :data => { :content => search_bar_html, 'original-title' => 'Recherche' }}

